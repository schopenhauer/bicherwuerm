<% provide(:title, "Manage Colors") %>

<table class="table table-hover table-striped table-condensed">
  <thead>
  <tr>
    <th>Color</th>
    <th>Description</th>
    <th>Hex Code</th>
    <th>Number of books</th>
    <th>Last updated</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @colors.each do |color| %>
    <tr>
      <td><b><%= link_to color.name, edit_color_path(color.id) %></b></td>
      <td><%= color.description %></td>
      <td><%= content_tag(:span, color.hex_code, style: "font-weight: bold; color: " + color.hex_code) if color.hex_code? %></td>
      <td><%= pluralize(color.books.count, 'book') %>
        (<%= number_to_percentage(color.books.count.to_f / @total_book_count * 100, precision: 1) %>)
      </td>
      <td><%= safe_timestamp(color.updated_at) %></td>
      <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                    color_books_path(color), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_color_path(color), :class => 'btn btn-primary btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    color,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-xs' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @colors %>

<br/>

<%= link_to 'New Color', new_color_path, class: 'btn btn-default' %>
