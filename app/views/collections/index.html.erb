<% provide(:title, "Manage Collections") %>

<table class="table table-hover table-striped table-condensed">
  <thead>
  <tr>
    <th>Collection</th>
    <th>Description</th>
    <th>Number of books</th>
    <th>Last updated</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @collections.each do |collection| %>
    <tr>
      <td><b><%= link_to collection.name, edit_collection_path(collection.id) %></b></td>
      <td><%= collection.description %></td>
      <td><%= pluralize(collection.books.count, 'book') %>
        (<%= number_to_percentage(collection.books.count.to_f / @total_book_count * 100, precision: 1) %>)
      </td>
      <td><%= safe_timestamp(collection.updated_at) %></td>
      <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                    collection_books_path(collection.id), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_collection_path(collection), :class => 'btn btn-primary btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    collection,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-xs' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @collections %>

<br/>

<%= link_to 'New Collection', new_collection_path, class: 'btn btn-default' %>
