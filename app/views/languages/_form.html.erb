<%= simple_form_for @language, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>

  <%= f.input :name, label: "Language", autofocus: true %>
  <%= f.input :local, label: "Language (local)" %>
  <%= f.input :acronym, label: "Country code", placeholder: 'e.g. fr' %>

  <%= f.submit "Save", class: "btn btn-success" %>

<% end %>
