<% provide(:title, "Database Backup") %>

<p>You can create new backups and browse, compress and download the below database backup files.</p>

<p>There are currently <%= @files.count %> backup(s) available.</p>

<% if @files.count > 0 %>

  <table class="table table-hover table-striped table-condensed">
    <thead>
    <tr>
      <th>Backup file</th>
      <th>File type</th>
      <th>File size</th>
      <th>Creation time</th>
      <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><b><%= link_to File.basename(file), download_sql_path(file: File.basename(file)) %></b></td>
        <td><%= File.extname(file) %></td>
        <td><%= Filesize.from(File.stat(file).size.to_s + ' B').pretty %></td>
        <td><%= safe_timestamp(File.ctime(file)) %></td>
        <td>
          <%= link_to 'Download',
                      download_sql_path(file: File.basename(file)),
                      :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Compress',
                      download_zip_path(file: File.basename(file)),
                      :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      remove_backup_path(file: file),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<br/>

<% if Rails.env == 'production' %>
  <%= link_to 'Launch Backup', new_backup_path, class: 'btn btn-default', method: :post, :data => { :confirm => 'Are you sure?' } %>
<% end %>
