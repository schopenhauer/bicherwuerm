<%= simple_form_for @publisher, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>

  <%= f.input :name, label: 'Publisher', autofocus: true %>
  <%= f.input :website %>
  <%= f.input :description, as: :text %>
  <%= f.submit "Save", class: "btn btn-success" %>

<% end %>
