<% provide(:title, "Manage Users") %>

<table class="table table-hover table-striped table-condensed">
  <thead>
  <tr>
    <th>User</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Last updated</th>
    <th>Last login</th>
    <th>Last known IP</th>
    <th>Number of books</th>
    <th>Sign in count</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><b><%= link_to user.name, edit_user_path(user) %></b> <%= '(You)' if current_user == user %></td>
      <td><%= mail_to user.email %></td>
      <td><%= user.admin.humanize %></td>
      <td><%= safe_timestamp(user.updated_at) %></td>
      <td><%= safe_timestamp(user.last_sign_in_at) %></td>
      <td><%= user.last_sign_in_ip %></td>
      <td><%= pluralize(Book.where(user_id: user.id).size, 'book') %>
        (<%= number_to_percentage(Book.where(user_id: user.id).size.to_f / @total_book_count * 100, precision: 1) %>)
      </td>
      <td><%= user.sign_in_count %></td>
      <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                    user_books_path(user.id), :class => 'btn btn-default btn-xs' %>
        <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_registration_path, :class => 'btn btn-primary btn-xs' if (current_user == user) %>
        <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                         user,
                         :method => :delete,
                         :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                         :class => 'btn btn-danger btn-xs' if (current_user != user) %> -->
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>

<%#= link_to 'New User', new_user_path, class: 'btn btn-default' %>
