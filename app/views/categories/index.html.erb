<% provide(:title, "Manage Categories") %>

<table class="sortable table table-hover table-striped table-condensed">
  <thead>
  <tr>
    <th>Category</th>
    <th>Description</th>
    <th>Number of books</th>
    <th>Last updated</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><b><%= link_to category.name, edit_category_path(category.id) %></b></td>
      <td><%= category.description %></td>
      <td><%= pluralize(Book.where(category_id: category.id).size, 'book') %>
        (<%= number_to_percentage(Book.where(category_id: category.id).size.to_f / @total_book_count * 100, precision: 1) %>
        )
      </td>
      <td><%= safe_timestamp(category.updated_at) %></td>
      <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                    category_books_path(category.id), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_category_path(category), :class => 'btn btn-primary btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    category,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-xs' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @categories %>

<br/>

<%= link_to 'New Category', new_category_path, class: 'btn btn-default' %>
